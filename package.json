		"type": "git",
		"url": "git+https://github.com/alex2844/node-xmihome.git"
	},
	"keywords": [
		"xiaomi",
		"mihome",
		"miot",
		"miio",
		"bluetooth",
		"iot",
		"smarthome",
		"node-red",
		"home-automation",
		"javascript"
	]
